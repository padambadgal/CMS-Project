    <% news.forEach(function(article) { %>
        <div class="post-content">
            <div class="row">
                <div class="col-md-4">
                    <a class="post-img" href="/single/<%= article._id %>"><img src="/uploads/<%= article.image %>" alt=""/></a>
                </div>
                <div class="col-md-8">
                    <div class="inner-content clearfix">
                <h3><a href='/single/<%= article._id %>'><%= article.title %></a></h3>
                        <div class="post-information">
                            <span>
                                <i class="fa fa-tags" aria-hidden="true"></i>
                                <a href='/category/<%= article.category.slug %>'><%= article.category.name %></a>
                            </span>
                            <span>
                                <i class="fa fa-user" aria-shidden="true"></i>
                                <a href='/author/<%= article.author._id %>'><%= article.author.fullname %></a>
                            </span>
                            <span>
                                <i class="fa fa-calendar" aria-hidden="true"></i>
                                <%= new Date( article.createAt ).toLocaleDateString('en-GB', {day: '2-digit', month: 'short', year: 'numeric'}) %>
                            </span>
                        </div>
                        <p class="description">
                            <%= article.content.replace(/<[^>]*>/g, '').substring(0, 30) + '...'%>
                        </p>
                        <a class='read-more pull-right' href='/single/<%= article._id %>'>read more</a>
                    </div>
                </div>
            </div>
        </div>
    <% }); %>
    
    <nav>
    <ul class="pagination">
        <li class="page-article disabled">
        <a class="page-link">Previous</a>
        </li>
        <li class="page-article"><a class="page-link" href="#">1</a></li>
        <li class="page-article active">
        <a class="page-link" href="#" aria-current="page">2</a>
        </li>
        <li class="page-article"><a class="page-link" href="#">3</a></li>
        <li class="page-article">
        <a class="page-link" href="#">Next</a>
        </li>
    </ul>
    </nav>