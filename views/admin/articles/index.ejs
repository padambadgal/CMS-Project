<div id="admin-content">
    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <h1 class="admin-heading"><i class="fa fa-file-text"></i> All Articles</h1>
            </div>
            <div class="col-md-2">
                <a class="add-new" href="/admin/add-article">Add New Article</a>
            </div>
            <div class="col-md-12">
                <div id="articlesCSS"></div>
            </div>
        </div>
    </div>
</div>



<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
<script type="text/javascript" src="https://unpkg.com/tabulator-tables@6.3.1/dist/js/tabulator.min.js"></script>

<script>
  // ✅ Safely embed server-side data in EJS
 const tableData = <%- JSON.stringify (articles) %>;
 
    // ✅ Initialize Tabulator table
    var table = new Tabulator("#articlesCSS", {
    data: tableData,
    layout: "fitColumns",
    pagination: true,
    paginationSize: 10,
    paginationSizeSelector: [5, 10, 25, 50, 100],
    columns: [
        { title: "S.No", formatter: "rownum", width: 100, hozAlign: "center" },
        { title: "Title", field: "title", headerFilter: "input" },
        { title: "Category", field: "category.name", headerFilter: "input" },
        {
          title: "Date",
          field: "createAt", // or "createdAt" if that's your schema field
          headerFilter: "input",
          formatter: (cell) => {
            const v = cell.getValue();
            const d = new Date(v);
            if (isNaN(d)) return "";
            return `${d.getDate()}-${d.toLocaleString('default',{month:'short'})}-${d.getFullYear()}`;
          }
        },
        { title: "Author", field: "author.fullname", headerFilter: "input" },
        {
            title: "Actions",
            formatter: function (cell, formatterParams, onRendered) {
            return `
                <a href="/admin/update-article/${cell.getData()._id}" class="btn btn-success btn-sm">Edit</a>
                <button class="btn btn-danger btn-sm delete-article" onclick="deleteArticle('${cell.getData()._id}')">Delete</button>
            `;
            },
        },
    ],
    });

//Delete User
  async function deleteArticle(id) {
    try {
      if (confirm("Are you sure you want to delete this Article?")) {
        const response = await fetch(`/admin/delete-article/${id}`, {
          method: "DELETE",
        });

        if (response.ok) {
          window.location.reload();
        } else {
          console.error("Failed to delete user:", response.statusText);
        }
      }
    } catch (error) {
      console.error("Error deleting user:", error);
    }
  }
</script>

<%- contentFor('tabulatorCSS') %> 
